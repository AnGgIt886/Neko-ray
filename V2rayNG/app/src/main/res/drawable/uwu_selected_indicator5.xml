<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Kiri Atas -->
    <item
        android:gravity="center|left|top"
        android:width="64dp"
        android:height="64dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorThemeUwu" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Kanan Atas -->
    <item
        android:gravity="center|right|top"
        android:width="64dp"
        android:height="64dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorThemeUwu" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Kiri Bawah -->
    <item
        android:gravity="bottom|center|left"
        android:width="64dp"
        android:height="64dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorThemeUwu" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Kanan Bawah -->
    <item
        android:gravity="bottom|center|right"
        android:width="64dp"
        android:height="64dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorThemeUwu" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Background tengah -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <inset>
            <shape android:shape="rectangle">
                <solid android:color="?attr/colorCard" />
                <corners android:radius="24dp" />
            </shape>
        </inset>
    </item>

</layer-list>
