<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:gravity="center"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToOutline="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="200.0dip"
        android:layout_marginTop="0.0dip"
        android:layout_marginBottom="8.0dip"
        android:baselineAligned="false">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200.0dip"
            android:layout_marginHorizontal="16.0dip"
            app:strokeWidth="0.0dip"
            app:cardBackgroundColor="@color/uwu_bg_card"
            app:cardCornerRadius="24.0dip"
            app:cardElevation="0.0dip"
            app:rippleColor="@android:color/transparent">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"
                android:padding="4.0dip"
                android:layout_width="180.0dip"
                android:layout_height="150.0dip"
                android:alpha="0.4"
                android:layout_marginHorizontal="25.0dip"
                app:lottie_renderMode="software"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="?attr/colorPrimary"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/uwu_lottie_hexagon" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:gravity="center_horizontal"
                    android:layout_gravity="center|top"
                    android:background="@drawable/uwu_bg_sin"
                    android:clickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="40.0dip"
                    android:layout_marginTop="-30.0dip"
                    android:backgroundTint="?attr/colorBg"
                    android:layout_marginHorizontal="75.0dip" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="16.0dip"
                    android:paddingBottom="16.0dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35.0dip">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dip" />
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="35.0sp"
                            android:textColor="?android:textColorPrimary"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="v2rayNG for Android"
                            android:singleLine="true"
                            android:fontFamily="@font/uwu_font_title" />
                        <TextView
                            android:textSize="35.0sp"
                            android:textColor="?attr/colorPrimary"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="v2rayNG for Android"
                            android:singleLine="true"
                            android:maxLength="8"
                            android:fontFamily="@font/uwu_font_title" />
                    </FrameLayout>
                    <com.neko.marquee.text.AutoMarqueeVersiTextView
                        android:textSize="17.0sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="center_horizontal"
                        android:id="@+id/summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="10"
                        android:layout_below="@+id/title"
                        android:layout_alignLeft="@+id/title"
                        android:fontFamily="@font/uwu_font_summary"
                        android:layout_alignStart="@+id/title" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip" />
            </FrameLayout>
            <View
                android:gravity="center_horizontal"
                android:layout_gravity="bottom|center"
                android:background="@drawable/uwu_bg_sin"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_marginBottom="-30.0dip"
                android:backgroundTint="?attr/colorBg"
                android:layout_marginHorizontal="75.0dip" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</FrameLayout>