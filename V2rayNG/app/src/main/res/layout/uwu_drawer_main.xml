<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:background="?attr/colorPrimary"
        android:paddingTop="10.0dip"
        android:paddingBottom="0.0dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="30.0dip"
            android:layout_marginRight="10.0dip">
            <com.google.android.material.card.MaterialCardView
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="120.0dip"
                android:layout_height="120.0dip"
                app:cardBackgroundColor="@color/uwu_bg"
                app:cardCornerRadius="24.0dip"
                app:cardElevation="0.0dip"
                app:rippleColor="#00000000"
                app:strokeColor="@color/uwu_bg_card"
                app:strokeWidth="3.0dip">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uwu_banner_profile"
                    android:scaleType="centerCrop"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <TextView
            android:textSize="20.0sp"
            android:textColor="@color/colorText_ActionBar"
            android:gravity="center"
            android:paddingLeft="16.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="0.0dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:layout_marginBottom="0.0dip"
            android:text="@string/uwu_header_title" />
        <com.neko.marquee.text.Grettings
            android:textSize="18.0sp"
            android:textColor="@color/colorText_ActionBar"
            android:gravity="center"
            android:paddingLeft="16.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:singleLine="true" />
        <ScrollView
            android:background="@drawable/uwu_background_lengkung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="16.0dip"
                android:paddingTop="8.0dip"
                android:paddingRight="16.0dip"
                android:paddingBottom="0.0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:background="@drawable/uwu_layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:onClick="subSetting">
                    <ImageView
                        android:background="@drawable/uwu_google_shape"
                        android:padding="12.0dip"
                        android:layout_width="45.0dip"
                        android:layout_height="45.0dip"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/ic_subscriptions_24dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorIcon"
                        android:backgroundTint="?attr/colorPrimary"/>
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_sub_setting"
                        android:layout_weight="1.0"/>
                    <ImageView
                        android:background="@drawable/uwu_bg_circle_arrow"
                        android:padding="2.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/uwu_arrow"
                        app:tint="?android:textColorPrimary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:background="@drawable/uwu_layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:onClick="settings">
                    <ImageView
                        android:background="@drawable/uwu_google_shape"
                        android:padding="12.0dip"
                        android:layout_width="45.0dip"
                        android:layout_height="45.0dip"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/ic_settings_24dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorIcon"
                        android:backgroundTint="?attr/colorPrimary"/>
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_settings"
                        android:layout_weight="1.0"/>
                    <ImageView
                        android:background="@drawable/uwu_bg_circle_arrow"
                        android:padding="2.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/uwu_arrow"
                        app:tint="?android:textColorPrimary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:background="@drawable/uwu_layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:onClick="userAssetSetting">
                    <ImageView
                        android:background="@drawable/uwu_google_shape"
                        android:padding="12.0dip"
                        android:layout_width="45.0dip"
                        android:layout_height="45.0dip"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/ic_file_24dp"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorIcon"
                        android:backgroundTint="?attr/colorPrimary"/>
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_user_asset_setting"
                        android:layout_weight="1.0"/>
                    <ImageView
                        android:background="@drawable/uwu_bg_circle_arrow"
                        android:padding="2.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/uwu_arrow"
                        app:tint="?android:textColorPrimary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:background="@drawable/uwu_layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:onClick="logcat">
                    <ImageView
                        android:background="@drawable/uwu_google_shape"
                        android:padding="12.0dip"
                        android:layout_width="45.0dip"
                        android:layout_height="45.0dip"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/uwu_ic_math_log"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorIcon"
                        android:backgroundTint="?attr/colorPrimary"/>
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_logcat"
                        android:layout_weight="1.0"/>
                    <ImageView
                        android:background="@drawable/uwu_bg_circle_arrow"
                        android:padding="2.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/uwu_arrow"
                        app:tint="?android:textColorPrimary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:background="@drawable/uwu_layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:onClick="UwuAbout">
                    <ImageView
                        android:background="@drawable/uwu_google_shape"
                        android:padding="12.0dip"
                        android:layout_width="45.0dip"
                        android:layout_height="45.0dip"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/uwu_about"
                        android:scaleType="fitCenter"
                        app:tint="?attr/colorIcon"
                        android:backgroundTint="?attr/colorPrimary"/>
                    <TextView
                        android:textSize="14.0sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uwu_about"
                        android:layout_weight="1.0"/>
                    <ImageView
                        android:background="@drawable/uwu_bg_circle_arrow"
                        android:padding="2.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:src="@drawable/uwu_arrow"
                        app:tint="?android:textColorPrimary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@drawable/uwu_background_material"
            android:paddingBottom="10.0dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_alignParentBottom="true"
            app:layout_anchorGravity="bottom">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="horizontal"
                android:background="@drawable/uwu_bg_exit"
                android:padding="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="uwuExitApp">
                <ImageView
                    android:padding="10.0dip"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:src="@drawable/uwu_icon_exit"
                    android:scaleType="fitCenter"
                    app:tint="?attr/colorIcon"/>
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="#ffffffff"
                    android:paddingLeft="8.0dip"
                    android:paddingTop="8.0dip"
                    android:paddingRight="60.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit"
                    android:layout_weight="1.0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>