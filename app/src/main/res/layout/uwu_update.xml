<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/uwu_bg_bot"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0.0dip"
    android:layout_marginBottom="10.0dip"
    android:layout_marginStart="16.0dip"
    android:layout_marginEnd="16.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:baselineAligned="false"
        android:minHeight="?android:listPreferredItemHeightSmall"
        android:onClick="uwuUpdater">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="65.0dip">
            <LinearLayout
                android:background="@drawable/uwu_google_shape"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:layout_marginStart="10.0dip"
                android:backgroundTint="?attr/colorPrimary">
                <androidx.preference.internal.PreferenceImageView
                    android:gravity="center"
                    android:id="@android:id/icon"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:layout_marginTop="10.0dip"
                    android:tint="?attr/colorIcon"
                    android:layout_marginStart="10.0dip"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingStart="10.0dip"
            android:paddingEnd="0.0dip">
            <TextView
                android:textSize="17.0sp"
                android:textColor="?android:textColorPrimary"
                android:ellipsize="marquee"
                android:id="@android:id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="?android:textColorSecondary"
                android:ellipsize="marquee"
                android:gravity="end|center"
                android:layout_gravity="end|center"
                android:id="@android:id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="65.0dip">
            <LinearLayout
                android:background="@drawable/uwu_bg_circle_arrow"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_marginStart="0.0dip">
                <ImageView
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:layout_marginTop="1.0dip"
                    android:src="@drawable/uwu_arrow"
                    android:layout_marginStart="2.0dip"
                    app:tint="?android:textColorPrimary" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>