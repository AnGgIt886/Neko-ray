<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="?attr/changelogStyle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?attr/changelogWindowStyle">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="0.0dip"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="10.0dip">
            <com.neko.elasticview.ElasticView
                android:layout_width="match_parent"
                android:layout_height="150.0dip"
                android:layout_marginTop="12.0dip"
                android:layout_marginStart="12.0dip"
                android:layout_marginEnd="12.0dip"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="19.0dip"
                app:cardElevation="0.0dip"
                app:rippleColor="#00000000">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uwu_banner_image_3"
                    android:scaleType="centerCrop"
                    android:elevation="0.0dip" />
                <View
                    android:background="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2" />
            </com.neko.elasticview.ElasticView>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50.0dip">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:src="@drawable/uwu_banner_profile"
                    app:civ_border_color="?attr/colorPrimary"
                    app:civ_border_overlay="true"
                    app:civ_border_width="3.0dip"
                    app:civ_circle_background_color="@color/uwu_bg" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="0.0dip"
                android:paddingBottom="0.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/changelog_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/changelog_title"
                        style="?attr/changelogTitleStyle" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10.0dip"
            android:paddingEnd="10.0dip"
            app:layoutManager="LinearLayoutManager" />
    </LinearLayout>
</LinearLayout>